@using Jobbie.Web.Models;

@model FocusEditViewModel
@{
    ViewData["Title"] = "Edit Focus";
}
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h2>Focus</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.DisciplineId, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.DisciplineId, Model.Disciplines, Jobbie.Web.Constants.Constants.EmptySelectOptionText, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DisciplineId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Focuses" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}