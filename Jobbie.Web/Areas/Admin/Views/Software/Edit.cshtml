@using Jobbie.Web.Models;

@model SoftwareEditViewModel
@{
    ViewData["Title"] = "Edit Software";
}
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h2>Software</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.InitialPurchaseCost, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.InitialPurchaseCost, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InitialPurchaseCost, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.SubscriptionMonthlyCost, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.SubscriptionMonthlyCost, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SubscriptionMonthlyCost, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.CheckBoxFor(model => model.IsSubscription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.IsSubscription, htmlAttributes: new { @class = "control-label" })
                    @Html.ValidationMessageFor(model => model.IsSubscription, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Software" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}