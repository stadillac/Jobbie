@using X.PagedList.Mvc.Core
@using Jobbie.Web.Models

@model ProfessionDisciplineIndexViewModel

<div class="row mt-4">
    <div class="col">
        <h2>ProfessionDisciplines</h2>
        <hr />
    </div>
</div>
<div class="row mt-4">
    <div class="col">
        <a class="btn btn-primary" asp-area="Admin" asp-controller="ProfessionDisciplines" asp-action="Edit">New</a>
    </div>
</div>
<div class="row mt-4">
    <div class="col">
        <h4>Current ProfessionDisciplines</h4>
    </div>
</div>
<!--TODO Filters-->

<div class="row mt-2">
    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Profession</th>
                    <th scope="col">Discipline</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProfessionDisciplineViewModel item in Model.ProfessionDisciplines)
                {
                    <tr>
                        <td>@item.ProfessionName</td>
                        <td>@item.DisciplineName</td>
                        <td>
                            <a href="/Admin/ProfessionDisciplines/Edit/@item.Id" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a href="javascript:void(0);" class="btn btn-danger" onclick="softDelete('/Admin/ProfessionDisciplines/Delete', @item.Id, this)">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model.ProfessionDisciplines, page => Url.Action("Index", new { page }), Jobbie.Web.Helpers.HtmlHelper.PagedListRenderOptions)
    </div>
</div>
